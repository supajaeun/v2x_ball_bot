<?xml version="1.0"?>
<sdf version="1.9">
  <model name="yahboomcar_x3">
    <pose>0 0 0.05 0 0 0</pose>
    <static>false</static>

    <!-- base_link -->
    <link name="base_link">
      <inertial>
        <mass>2.0</mass>
        <inertia ixx="0.02" iyy="0.02" izz="0.03"/>
      </inertial>
      <collision name="base_col">
        <geometry>
          <mesh><uri>../meshes/mecanum/base_link.STL</uri></mesh>
        </geometry>
      </collision>
      <visual name="base_vis">
        <geometry>
          <mesh><uri>../meshes/mecanum/base_link.STL</uri></mesh>
        </geometry>
      </visual>
    </link>

    <!-- wheels (mesh + 위치 + 축 회전) -->
    <link name="front_left_wheel">
      <inertial><mass>0.2</mass></inertial>
      <collision name="col"><geometry><mesh><uri>../meshes/mecanum/front_left_wheel.STL</uri></mesh></geometry></collision>
      <visual    name="vis"><geometry><mesh><uri>../meshes/mecanum/front_left_wheel.STL</uri></mesh></geometry></visual>
    </link>
    <joint name="front_left_joint" type="continuous">
      <parent>base_link</parent><child>front_left_wheel</child>
      <!-- y=+0.0845 / 바퀴 축을 Y로 정렬하기 위해 roll=0,pitch=1.5708 -->
      <pose> 0.08  0.0845 -0.05  0 1.5708 0</pose>
      <axis><xyz>0 1 0</xyz></axis>
    </joint>

    <link name="front_right_wheel">
      <inertial><mass>0.2</mass></inertial>
      <collision name="col"><geometry><mesh><uri>../meshes/mecanum/front_right_wheel.STL</uri></mesh></geometry></collision>
      <visual    name="vis"><geometry><mesh><uri>../meshes/mecanum/front_right_wheel.STL</uri></mesh></geometry></visual>
    </link>
    <joint name="front_right_joint" type="continuous">
      <parent>base_link</parent><child>front_right_wheel</child>
      <pose> 0.08 -0.0845 -0.05  0 1.5708 0</pose>
      <axis><xyz>0 1 0</xyz></axis>
    </joint>

    <link name="back_left_wheel">
      <inertial><mass>0.2</mass></inertial>
      <collision name="col"><geometry><mesh><uri>../meshes/mecanum/back_left_wheel.STL</uri></mesh></geometry></collision>
      <visual    name="vis"><geometry><mesh><uri>../meshes/mecanum/back_left_wheel.STL</uri></mesh></geometry></visual>
    </link>
    <joint name="back_left_joint" type="continuous">
      <parent>base_link</parent><child>back_left_wheel</child>
      <pose>-0.08  0.0845 -0.05  0 1.5708 0</pose>
      <axis><xyz>0 1 0</xyz></axis>
    </joint>

    <link name="back_right_wheel">
      <inertial><mass>0.2</mass></inertial>
      <collision name="col"><geometry><mesh><uri>../meshes/mecanum/back_right_wheel.STL</uri></mesh></geometry></collision>
      <visual    name="vis"><geometry><mesh><uri>../meshes/mecanum/back_right_wheel.STL</uri></mesh></geometry></visual>
    </link>
    <joint name="back_right_joint" type="continuous">
      <parent>base_link</parent><child>back_right_wheel</child>
      <pose>-0.08 -0.0845 -0.05  0 1.5708 0</pose>
      <axis><xyz>0 1 0</xyz></axis>
    </joint>

    <!-- LiDAR (mesh + 센서) -->
    <link name="lidar_link">
      <pose>0 0 0.15 0 0 0</pose>
      <collision name="col"><geometry><mesh><uri>../meshes/sensor/laser_link.STL</uri></mesh></geometry></collision>
      <visual    name="vis"><geometry><mesh><uri>../meshes/sensor/laser_link.STL</uri></mesh></geometry></visual>

      <sensor name="lidar" type="lidar">
        <update_rate>10</update_rate>
        <topic>scan</topic>
        <lidar>
          <horizontal>
            <samples>360</samples>
            <resolution>1</resolution>
            <min_angle>-3.14159</min_angle>
            <max_angle> 3.14159</max_angle>
          </horizontal>
          <range><min>0.1</min><max>8.0</max></range>
        </lidar>
      </sensor>
    </link>
    <joint name="lidar_joint" type="fixed">
      <parent>base_link</parent><child>lidar_link</child>
    </joint>

    <!-- (옵션) 카메라 하우징 메쉬만 표시 -->
    <link name="camera_link">
      <pose>0.057105 0.000018 0.03755 0 0 0</pose>
      <collision name="col"><geometry><mesh><uri>../meshes/sensor/camera_link.STL</uri></mesh></geometry></collision>
      <visual    name="vis"><geometry><mesh><uri>../meshes/sensor/camera_link.STL</uri></mesh></geometry></visual>
    </link>
    <joint name="camera_joint" type="fixed">
      <parent>base_link</parent><child>camera_link</child>
    </joint>

    <!-- DiffDrive 시스템 (4륜: 좌/우 2개씩 묶음) -->
    <plugin name="gz::sim::systems::DiffDrive" filename="gz-sim-diff-drive-system">
      <left_joint>front_left_joint</left_joint>
      <left_joint>back_left_joint</left_joint>
      <right_joint>front_right_joint</right_joint>
      <right_joint>back_right_joint</right_joint>
      <wheel_separation>0.169</wheel_separation>
      <wheel_radius>0.05</wheel_radius>
      <odom_publish_frequency>50</odom_publish_frequency>
      <cmd_vel_topic>cmd_vel</cmd_vel_topic>   <!-- /model/<name>/cmd_vel -->
      <odom_topic>odometry</odom_topic>        <!-- /model/<name>/odometry -->
      <use_parent_model_frame>true</use_parent_model_frame>
    </plugin>
  </model>
</sdf>
